<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="121dp">



        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imgProdutoCarrinho"
            android:layout_weight="0.33"
            android:layout_width="77dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Nome do Produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/tvTituloItemCarrinho"
                android:layout_alignTop="@+id/imgItemCarrinho"
                android:layout_toEndOf="@+id/imgItemCarrinho"
                android:layout_gravity="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/tvDescricaoProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgItemCarrinho"
                android:layout_alignStart="@+id/tvTituloItemCarrinho"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:text="R$ 45,00"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="71dp"
            android:layout_height="122dp"
            android:layout_weight="0.18"
            android:weightSum="1">

            <ImageView
                android:id="@+id/removeItemCarrinho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.29"
                app:srcCompat="@android:drawable/ic_menu_delete" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/decItemCarrinho"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/tvQtItemCarrinho"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_weight="0.78"
                    android:gravity="center"
                    android:text="1" />

                <Button
                    android:id="@+id/incItemCarrinho"
                    android:layout_width="26dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:text="+"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
