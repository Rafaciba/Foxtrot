<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="99dp">


        <ImageView
            android:id="@+id/imgItemCarrinho"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_weight="0.09"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeProdutoResumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgItemCarrinho"
                android:layout_gravity="left"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/imgItemCarrinho"
                android:maxWidth="180dp"
                android:text="Nome do Produto"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/tvDescricaoProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgItemCarrinho"
                android:layout_alignStart="@+id/tvTituloItemCarrinho"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:maxLength="60"
                android:maxWidth="180dp"
                android:text="Descrição do Produto"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPrecoProduto"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_weight="0.11"
            android:gravity="center"
            android:text="Valor"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="normal|bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>
