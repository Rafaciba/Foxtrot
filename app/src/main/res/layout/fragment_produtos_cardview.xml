<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="99dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:weightSum="1">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView"
                android:layout_weight="0.62"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="77dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Preço"
                android:ems="10"
                android:id="@+id/idPrecoProduto"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/idNomeProduto"
                android:textAlignment="textEnd"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Descrição do Produto"
                android:ems="10"
                android:id="@+id/idDescricaoProduto"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginBottom="12dp" />

            <EditText
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Nome do Produto"
                android:ems="10"
                android:id="@+id/idNomeProduto"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:layout_alignEnd="@+id/idDescricaoProduto"
                android:layout_toEndOf="@+id/imageView" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
