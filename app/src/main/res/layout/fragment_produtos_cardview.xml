<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="99dp">



            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/ivImagemProduto"
                android:layout_weight="0.33"
                android:layout_width="77dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_alignParentStart="true" />
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="Nome do Produto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="1dp"
                    android:id="@+id/tvNomeProduto"
                    android:textSize="24sp"
                    android:layout_alignTop="@+id/ivImagemProduto"
                    android:layout_toEndOf="@+id/ivImagemProduto"
                    android:textStyle="normal|bold"
                    android:layout_gravity="left"/>

                <TextView
                    android:id="@+id/tvDescricaoProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivImagemProduto"
                    android:layout_alignStart="@+id/tvNomeProduto"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="Descrição do Produto" />

            </LinearLayout>

        <TextView
            android:id="@+id/tvPrecoProduto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="Valor"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="normal|bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>
